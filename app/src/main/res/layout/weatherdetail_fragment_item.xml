<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardvNews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundTint="@android:color/holo_orange_light">


        <TextView
            android:text="25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_date_day"
            android:textSize="24sp"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginBottom="10dp"
            android:background="@color/wallet_highlighted_text_holo_dark"/>

        <TextView
            android:text="nov."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_date_month"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_below="@+id/textView_date_day"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:paddingBottom="3dp"/>
        <TextView
            android:text="jeu."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_date_week"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_below="@+id/textView_date_month"
            android:layout_alignParentStart="true"
            android:paddingLeft="12dp"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/art_clear"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView_date_day"
            android:id="@+id/imageView_weather"
            android:layout_margin="20dp"
            />


        <TextView
            android:text="mat."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_morning"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView_weather"
            android:layout_margin="3dp"/>
        <TextView
            android:text="jour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_jour"
            android:layout_below="@+id/textView_morning"
            android:layout_toEndOf="@+id/imageView_weather"
            android:layout_margin="3dp"/>
        <TextView
            android:text="soir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_soir"
            android:layout_below="@+id/textView_jour"
            android:layout_toEndOf="@+id/imageView_weather"
            android:layout_margin="3dp"/>
        <TextView
            android:text="nuit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_nuit"
            android:layout_below="@+id/textView_soir"
            android:layout_toEndOf="@+id/imageView_weather"
            android:layout_margin="3dp"/>


        <TextView
            android:text="15°"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_morning_tmp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView_morning"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"/>

        <TextView
            android:text="20°"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_jour_tmp"
            android:layout_below="@+id/textView_morning_tmp"
            android:layout_toEndOf="@+id/textView_morning"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"/>
        <TextView
            android:text="17°"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_soir_tmp"
            android:layout_below="@+id/textView_jour_tmp"
            android:layout_toEndOf="@+id/textView_morning"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"/>
        <TextView
            android:text="05°"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_nuit_tmp"
            android:layout_below="@+id/textView_soir_tmp"
            android:layout_toEndOf="@+id/textView_morning"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:paddingLeft="20dp"/>

        <View
            android:id="@+id/separater"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_toEndOf="@+id/imageView_weather"
            android:layout_below="@+id/textView_nuit"
            android:background="@color/colorPrimaryDark"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>


        <TextView
            android:text="hum. (g/m3)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_humidite"
            android:layout_below="@+id/separater"
            android:layout_toEndOf="@+id/imageView_weather"
            android:layout_margin="3dp"
            android:textSize="12sp"
            />
        <TextView
            android:text="pres. (Pa)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_pression"
            android:layout_below="@+id/textView_humidite"
            android:layout_toEndOf="@+id/imageView_weather"
            android:layout_margin="3dp"
            android:textSize="12sp"
            />
        <TextView
            android:text="vent (km/h)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_vent"
            android:layout_below="@+id/textView_pression"
            android:layout_toEndOf="@+id/imageView_weather"
            android:layout_margin="3dp"
            android:textSize="12sp"
            />
        <TextView
            android:text="vent (°)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_degree"
            android:layout_below="@+id/textView_vent"
            android:layout_toEndOf="@+id/imageView_weather"
            android:layout_margin="3dp"
            android:textSize="12sp"
            />

        <TextView
            android:text="123"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_humidite_v"
            android:layout_below="@+id/separater"
            android:layout_toEndOf="@+id/textView_humidite"
            android:layout_margin="3dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingLeft="12dp"/>
        <TextView
            android:text="1000.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_pression_v"
            android:layout_below="@+id/textView_humidite_v"
            android:layout_toEndOf="@+id/textView_humidite"
            android:layout_margin="3dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:paddingLeft="12dp"/>
        <TextView
            android:text="3.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_degree_v"
            android:layout_below="@+id/textView_vent_v"
            android:layout_toEndOf="@+id/textView_humidite"
            android:layout_margin="3dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingLeft="12dp"/>
        <TextView
            android:text="270"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_vent_v"
            android:layout_below="@+id/textView_pression_v"
            android:layout_toEndOf="@+id/textView_humidite"
            android:layout_margin="3dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingLeft="12dp"/>
     </RelativeLayout>

</android.support.v7.widget.CardView>
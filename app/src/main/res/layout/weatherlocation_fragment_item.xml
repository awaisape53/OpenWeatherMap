<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardvNews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundTint="@android:color/holo_orange_light">

        <TextView
            android:id="@+id/textViewLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:textStyle="bold"
            android:padding="6dp"
            android:text="Paris" />

        <View
            android:id="@+id/separation_loc"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewLocation"
            android:background="@color/sunshine_dark_blue"
            android:layout_margin="6dp" />

        <ImageView
            android:id="@+id/imageViewWeather"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/separation_loc"
            android:layout_gravity="center"
            app:srcCompat="@drawable/art_clear" />

        <View
            android:id="@+id/separation_loc2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageViewWeather"
            android:background="@color/sunshine_dark_blue"
            android:layout_margin="6dp" />

        <View
            android:id="@+id/separation"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="@color/sunshine_dark_blue"
            android:layout_below="@+id/separation_loc2"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/textViewMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separation_loc2"
            android:layout_toEndOf="@+id/separation"
            android:padding="6dp"
            android:text="Max."
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewMaxTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewMax"
            android:layout_toEndOf="@+id/textViewMax"
            android:text="25"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/textViewMaxMetric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewMaxTemp"
            android:layout_toEndOf="@+id/textViewMaxTemp"
            android:paddingLeft="2dp"
            android:text="°"
            />

        <TextView
            android:id="@+id/textViewMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separation_loc2"
            android:layout_alignStart="@+id/separation_loc2"
            android:padding="6dp"
            android:text="Min."
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textViewMinTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewMin"
            android:layout_toEndOf="@+id/textViewMin"
            android:text="18"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewMinMetric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewMinTemp"
            android:layout_toEndOf="@+id/textViewMinTemp"
            android:paddingLeft="2dp"
            android:text="°" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
